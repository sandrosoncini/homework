
<%- include("./partials/header") %> 


<div class="card">
    <div class="card-body">
        <h4 class="card-title"><img src="https://images.unsplash.com/photo-1518492104633-130d0cc84637?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=926&q=80" alt="" class="img-circle team-logo rounded-circle mr-3 small" height="72px" width="72px"><%= cohort.title %> <%= cohort.id %></h4>
        <p class="card-text"><%= cohort.content %></p>
    </div>
</div>
<hr>
<br>

<div>
    <h6>Method</h6>
    <form>
<div class="form-check">
    <input class="form-check-input" type="radio" name="method" id="teamCount" value="teamCount" checked>
    <label class="form-check-label" for="exampleRadios1">
      Team Count
    </label>
  </div>
  <br>
  <div class="form-check">
    <input class="form-check-input" type="radio" name="method" id="numberPerTeam" value="numberPerTeam">
    <label class="form-check-label" for="exampleRadios2">
      Number Per Team
    </label>
  </div>
  <br>
  <div>
  
    <div class="form-group">
      <label for="exampleInputEmail1">Quantity</label>
      <input type="text" class="form-control" name="quantity "id="quantity1" aria-describedby="emailHelp">
      
    </div>
    <button type="submit" class="btn btn-primary btn-lg btn-block">Assign Team</button>
</form>
</div>
</div>

<div>
<% if (method) { %>
  <ul class="list-group">
  <li class="list-group-item d-flex justify-content-start align-items-center">
    <span class="mr-4 font-weight-bold">#</span>
    <span class="font-weight-bold">Members</span>
  </li>

  <% for (let team in teamList) { %>
  <li class="list-group-item d-flex justify-content-start align-items-center">
    <span class="mr-4 font-weight-bold"><%= team %></span>
    <%= teamList[team].join(", ") %>
  </li>
</ul>
  <%
    }
  %>
  <% } %>
 
</div>
</div>
</body>
</html>

 




